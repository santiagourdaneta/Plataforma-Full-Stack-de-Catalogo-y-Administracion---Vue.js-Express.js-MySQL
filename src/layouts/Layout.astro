---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css'; // Importa los estilos globales (Tailwind base)
import Header from '../components/Header.astro'; 

interface Props {
	title: string;
	description: string;
    // URL de una imagen para Open Graph, debe estar en la carpeta 'public'
	image?: string; 
}

const { title, description, image } = Astro.props;
const siteUrl = Astro.url.origin; // Obtiene la URL base del sitio autom√°ticamente
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		
		{image && <meta property="og:image" content={siteUrl + image} />}
		{image && <meta property="og:image:width" content="1200" />}
		{image && <meta property="og:image:height" content="630" />}
		
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		{image && <meta name="twitter:image" content={siteUrl + image} />}
		
		<ViewTransitions />
	</head>
	
	<body class="bg-gray-900 font-sans antialiased text-white">
		<Header/>
		<slot />
	</body>
</html>